<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- custom style for button -->
    <style name="CustomButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:padding">10dp</item>
    </style>

    <!-- custom style for relative layout -->
    <style name="CustomRelativeLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/material_dynamic_neutral_variant90</item>
    </style>

    <!-- custom style for textview of main activity -->
    <style name="TextViewScreenFirstStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <!-- custom style for textview of music activity -->
    <style name="MusicTextView">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <!-- custom style for textview of playlist activity -->
    <style name="PlaylistTextview">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>